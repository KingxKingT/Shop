{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun install && npx tsr generate && tsc --noEmit && vite build --sourcemap"
  },
  "deploy": {
    "startCommand": "bun run server.ts",
    "healthcheckPath": "/",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE"
  }
}
